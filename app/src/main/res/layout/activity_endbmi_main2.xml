<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#eeeeee"
    tools:context=".endbmiMainActivity2">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/imagebg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="150dp"

        android:layout_height="75dp"
        android:layout_marginTop="44dp"

        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/group_51"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/weight1"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"

        android:layout_marginTop="92dp"
        android:hint="Enter Weight in kg"
        android:inputType="numberDecimal"
        android:padding="20dp"
android:gravity="center"

        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText

        android:id="@+id/heigth1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:hint="Enter Heigth in Feet.Inch"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:gravity="center"

        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/click1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/heigth1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:text="Click"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#ffff"
        android:background="@drawable/but"
        />


    <TextView
        android:id="@+id/ans1"
        android:layout_width="250dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/click1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="29dp"
        android:textColor="#814848"

        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>